<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/background_card">

        <ImageView
            android:id="@+id/ImgShop"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/NameShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp"
            android:layout_toStartOf="@id/RateShop"
            android:layout_toLeftOf="@id/RateShop"
            android:padding="4dp"
            android:text="Shop Name"
            android:textColor="@color/text_card"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/RateShop"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_below="@id/ImgShop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="-18dp"
            android:layout_marginRight="-18dp"
            android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
            android:gravity="center"
            android:max="5"
            android:rating="3.5"
            android:scaleX=".8"
            android:scaleY=".8"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"
            android:theme="@style/RatingBar" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>